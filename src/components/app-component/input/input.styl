@import "../../../common/common.styl";

.input-component {
    color: $colors.gray;
    font: $font;
    padding: 0;
    margin: 0 0 25px 0;
    position: relative;
    max-width: 500px;
    width: 100%;

    &__input {
        border: 0;
        border-bottom: 2px solid $colors.gray;
        box-sizing: border-box;
        display: block;
        line-height: 26px;
        padding: 3px 2px;
        transition: all ease-out 0.2s;
        width: 100%;
    }

    &__label {
        background-color: $colors.white; 
        cursor: text;
        color: $colors.gray;
        line-height: 26px;
        overflow: hidden;
        padding: 0 0 0 3px;
        position: absolute;
        bottom: 100%;
        left: 0;
        right: auto;
        transform: translate3d(0,33px,0) scale(1);
        transform-origin: left top;
        transition: all ease-out 0.1s;
        width: 100%;
    }

    &__hint {
        color: $colors.gray;
        font-size: 12px;
    }

    &.input-focused &__input {
        border-color: $colors.red;
    }

    &.input-focused &__label {
        background-color: transparent;
        color: $colors.red;
        padding: 0;
        transform: translate3d(0,10px,0) scale(0.8);
    }
}